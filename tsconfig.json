{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "ES6",
      "lib": ["ES6", "ES2017"],
      "noImplicitAny": true,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "dist/",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true
    },
    "include": ["./src/**/*", "./.env"],
    "exclude": ["node_modules", "**/*.spec.ts", ".vscode", ".github", "docs", "scripts", "./src/tests"]
}
