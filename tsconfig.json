{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "ES6",
      "lib": ["ES6", "ES2017"],
      "noImplicitAny": true,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "baseUrl": "src/",
      "paths": {
        "@app/*": ["./*"],
        "@models/*": ["models/*"],
        "@controllers/*": ["controllers/*"],
        "@services/*": ["services/*"],
        "@middlewares/*": ["middlewares/*"],
        "@strategies/*": ["strategies/*"],
        "@constants/*": ["constants/*"],
        "@assets/*": ["assets/*"]
      }
    },
    "include": ["./src/**/*", "./.env"],
    "exclude": ["node_modules", ".vscode", ".github", "docs", "scripts", "tests"]
}
