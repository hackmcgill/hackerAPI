    "scripts": {
        "start": "DEBUG=hackboard:* NODE_ENV=test ts-node-dev --respawn --pretty --transpile-only src/app.ts",
        "start-windows": "set DEBUG=hackboard:* && set NODE_ENV=test && ts-node-dev --respawn --pretty --transpile-only src/app.ts",
