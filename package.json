{
    "name": "hackboard",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "NODE_ENV=deployment node ./bin/www.js",
        "debug": "DEBUG=hackboard:* NODE_ENV=deployment nodemon --ignore gcp_creds.json ./bin/www.js",
        "development": "DEBUG=hackboard:* NODE_ENV=development nodemon --ignore gcp_creds.json ./bin/www.js",
        "test": "DEBUG=hackboard:* NODE_ENV=test mocha --reporter spec tests/**.js --exit",
        "seed": "NODE_ENV=development node ./seed/index.js",
        "docs": "apidoc -i ./routes -o ./docs/api/"
    },
    "dependencies": {
        "@google-cloud/logging-winston": "^0.11.1",
        "@google-cloud/storage": "^2.5.0",
        "@sendgrid/mail": "^6.3.1",
        "bcrypt": "^3.0.6",
        "cookie-parser": "~1.4.4",
        "cookie-session": "^2.0.0-beta.3",
        "cors": "^2.8.5",
        "cryptiles": "^4.1.3",
        "debug": "~4.1.1",
        "dotenv": "^7.0.0",
        "express": "~4.17.1",
        "express-validator": "^5.3.1",
        "express-winston": "^2.6.0",
        "handlebars": "^4.1.2",
        "jsonwebtoken": "^8.5.1",
        "memory-cache": "^0.2.0",
        "mongoose": "^5.5.2",
        "multer": "^1.3.1",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "q": "^1.5.1",
        "qrcode": "^1.4.0",
        "winston": "^2.4.4"
    },
    "devDependencies": {
        "@types/express": "^4.17.0",
        "@types/google-cloud__storage": "^1.7.2",
        "@types/mongodb": "^3.1.28",
        "@types/mongoose": "^5.5.8",
        "@types/multer": "^1.3.7",
        "apidoc": "^0.17.7",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "jshint": "^2.10.2",
        "jslint": "^0.12.1",
        "mocha": "^6.1.4",
        "nodemon": "^1.19.1"
    }
}
